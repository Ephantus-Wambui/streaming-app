<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); -%>

<body>

  <%- include('layouts/navbar')-%>

      <main>

        <div class="container video">
        
          <video controls autoplay>
            <source src="<%= youtube.video %>" type="video/mp4">
          </video>

          <h1><%= youtube.title %></h1>
          <p><%= youtube.datePosted %></p>
        
        </div>

        <div class="container">

          <% for (var i = 0; i < youtube.length; i++) {%>
  
              <p><a href="/viewVideo/<%= youtube[i].slug%>"><%= youtube[i].title %></a></p>
  
          <% } %>
  
          </div>

      </main>
    
</body>

</html>
